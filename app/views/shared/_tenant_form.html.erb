 <%= simple_form_for [@lease,@tenant] do |f| %>
  <%= f.error_notification %>

   <div class="row">
    <div class="large-6 columns">
      <%= f.input :first_name, label: 'Prénom' %>
    </div>
    <div class="large-6 columns">
       <%= f.input :last_name, label: 'Nom' %>
    </div>
  </div>

  <div class="row">
    <div class="large-8 columns">
      <%= f.input :address, label: 'Adresse' %>
    </div>
    <div class="large-4 columns">
       <%= f.input :number, label: 'Numéro' %>
    </div>
  </div>

  <div class="row">
    <div class="large-4 columns">
      <%= f.input :zip, label: 'Prénom' %>
    </div>
    <div class="large-8 columns">
       <%= f.input :locality, label: 'Nom' %>
    </div>
  </div>

  <div class="row">
    <div class="large-6 columns">
       <%= f.input :type, collection: ['Maison','Appartement'] %>
    </div>
  </div>


  <div class="btn">
    <%= f.button :submit, "Générer Pdf", class: "btn-smovehouse" %>
  </div>
<% end %>

