 <%= simple_form_for(@lease) do |f| %>
  <%= f.error_notification %>
  <%= f.input :rent, label_html: { class: 'test' }, wrapper_html: {class: 'wrap'}, label: 'Loyer initial', input_html: {class: 'try'} , key: '€'%>
  <%= f.input :signature_month, wrapper_html: {class: 'inline_fields wrap'}, label_html: { class: 'test' }, collection: 1..12, input_html: {class: 'try'}, label: 'Date de signature du bail' %>
  <%= f.input :signature_year, wrapper_html: {class: 'inline_fields wrap'},label_html: { class: 'test' }, collection: 2000..2017, input_html: {class: ''}, label: false %>
  <%= f.input :start_month, wrapper_html: {class: 'inline_fields'}, collection: 1..12, label_html: { class: 'test' }, input_html: {class: 'inline-margin '}, label: "Date d'entrée en vigueur du bail" %>
  <%= f.input :start_year,wrapper_html: {class: 'inline_fields wrap'}, input_html: {class: ''}, collection: 2000..2017, label: false %>
  <%= f.input :indexation_year,wrapper_html: {class: 'wrap'}, label_html: { class: 'test' }, input_html: {class: 'try'}, collection: 2000..2017, label: "Année d'indexation" %>
  <%= f.input :region,wrapper_html: {class: 'wrap'}, label_html: { class: 'test' }, collection: ["Bruxelles-Capitale", "Région Wallonne", "Région Flamande"], input_html: {class: 'try'} %>


  <%= f.button :submit, 'Indexez votre loyer', class: 'nav-button' %>
<% end %>


